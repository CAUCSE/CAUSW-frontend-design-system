{
  "name": "@causw/core",
  "version": "0.0.10",
  "description": "Core components and utilities for CAUSW Design System - CAU Software Community Service",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": {
      "import": "./src/styles/global.css",
      "require": "./src/styles/global.css"
    }
  },
  "files": [
    "dist",
    "src/styles"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --treeshake",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "lint": "eslint src"
  },
  "dependencies": {
    "@causw/icons": "workspace:*",
    "@causw/tokens": "workspace:*",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "@radix-ui/react-toast": "^1.2.15",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CAUCSE/CAUSW-frontend-design-system",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "sideEffects": false
}
